<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/space10"
    android:layout_marginStart="50dp">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_chat_me">
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5:04 pm"
            android:textSize="11sp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tv_chat_text"
            android:textColor="@color/white"
            android:fontFamily="@font/proximanovaregular"
            android:paddingEnd="@dimen/padding_8dp"
            android:paddingBottom="@dimen/padding_8dp"/>
        <TextView
            android:id="@+id/tv_chat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/space10"
            android:text="Hi, joe how are you, do you like to join our party in next week because you don't like party?"
            android:textColor="@android:color/white"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>


</RelativeLayout>