<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="6sp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/ll_row"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <RatingBar
            android:id="@+id/review_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            style ="?android:attr/ratingBarStyleSmall"
            android:layout_margin="@dimen/padding_8dp"
            android:contentDescription="@string/app_name"
            app:srcCompat="@android:drawable/ic_menu_delete" />

        <TextView
            android:id="@+id/review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/review_rating_bar"
            android:layout_alignParentRight="true"
            android:text="Reviews"
            android:textSize="10dp"
            android:textColor="@color/black"
            android:layout_marginRight="@dimen/padding_8dp"/>

        <TextView
            android:id="@+id/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/review"
            android:layout_alignParentRight="true"
            android:text="7095138221"
            android:textSize="10dp"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_phone_android"
            android:fontFamily="@font/proximanovaregular"
            android:textColor="@color/black"
            android:layout_marginRight="@dimen/padding_8dp"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:textColor="@color/black"
            android:textAlignment="textStart"
            android:drawableLeft="@drawable/ic_person"
            android:fontFamily="@font/proximanovaregular"
            android:text="Siva Sankar \n AP!^ TV 1999"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/address_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="10dp"
            android:layout_below="@+id/title"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:fontFamily="@font/proximanovaregular"
            android:drawableLeft="@drawable/ic_person"
            android:text="Madhapur,Hyderabad\nPincode 500081" />

        <LinearLayout
            android:layout_below="@+id/address_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Seats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4sp"
                android:layout_weight="33"
                android:textSize="10dp"
                android:padding="@dimen/padding_4sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/proximanovaregular"
                android:text="Seats:- 2"/>

            <TextView
                android:id="@+id/ac_or_non_ac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4sp"
                android:layout_weight="33"
                android:textSize="10dp"
                android:padding="@dimen/padding_4sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/proximanovaregular"
                android:text="AC"/>

            <TextView
                android:id="@+id/price_of_ride"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4sp"
                android:layout_weight="33"
                android:textSize="10dp"
                android:padding="@dimen/padding_4sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/proximanovaregular"
                android:text="\u20A8 300"/>

        </LinearLayout>

        <TextView
            android:id="@+id/request_ride"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/gray_border"
            android:text="Request Ride"
            android:textSize="12sp"
            android:textAlignment="center"
            android:paddingLeft="@dimen/padding_8dp"
            android:paddingRight="@dimen/padding_8dp"
            android:paddingTop="4sp"
            android:paddingBottom="4sp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="16dp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>