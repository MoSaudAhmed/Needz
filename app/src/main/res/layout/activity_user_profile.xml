<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:context="com.need.needz.activities.user_profile.UserProfile">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/bg_profile"
            android:foreground="#AA000000"
            android:scaleType="centerCrop"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Profile"
            android:padding="@dimen/padding_8dp"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/proximanovaregular"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="150dp"
        android:background="@drawable/round_fill_white"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="50dp"
        android:padding="@dimen/padding_8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Siva Sankar"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:layout_marginTop="70dp"
                android:padding="@dimen/padding_4sp"
                android:fontFamily="@font/proximanovaregular"
                android:textSize="24sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sivasankar@gmail.com"
                android:layout_below="@+id/user_name"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/padding_4sp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/proximanovaregular"
                android:textSize="12sp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.67sp"
            android:padding="@dimen/padding_4sp"
            android:layout_marginTop="@dimen/padding_4sp"
            android:background="@color/gray"/>

        <LinearLayout
            android:id="@+id/update_profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_8dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_email"
                android:tint="@color/gray"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/padding_4sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="Update Profile"
                android:padding="@dimen/padding_8dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/proximanovaregular"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_right"
                android:tint="@color/gray"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/padding_4sp"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.67sp"
            android:padding="@dimen/padding_4sp"
            android:layout_marginTop="@dimen/padding_4sp"
            android:background="@color/gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_8dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_email"
                android:tint="@color/gray"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/padding_4sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="My Rides"
                android:padding="@dimen/padding_8dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/proximanovaregular"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_right"
                android:tint="@color/gray"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/padding_4sp"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.67sp"
            android:padding="@dimen/padding_4sp"
            android:layout_marginTop="@dimen/padding_4sp"
            android:background="@color/gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_8dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_email"
                android:tint="@color/gray"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/padding_4sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="About you"
                android:padding="@dimen/padding_8dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/proximanovaregular"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_right"
                android:tint="@color/gray"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/padding_4sp"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.67sp"
            android:padding="@dimen/padding_4sp"
            android:layout_marginTop="@dimen/padding_4sp"
            android:background="@color/gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_8dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_email"
                android:tint="@color/gray"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/padding_4sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="My History"
                android:padding="@dimen/padding_8dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/proximanovaregular"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_right"
                android:tint="@color/gray"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/padding_4sp"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.67sp"
            android:padding="@dimen/padding_4sp"
            android:layout_marginTop="@dimen/padding_4sp"
            android:background="@color/gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_8dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_email"
                android:tint="@color/gray"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/padding_4sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="Logout"
                android:padding="@dimen/padding_8dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/proximanovaregular"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_right"
                android:tint="@color/gray"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/padding_4sp"/>

        </LinearLayout>

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:scaleType="centerCrop"
        app:civ_border_color="@color/white"
        app:civ_border_width="3sp"
        android:src="@mipmap/bg_6"/>
</RelativeLayout>


</androidx.core.widget.NestedScrollView>
