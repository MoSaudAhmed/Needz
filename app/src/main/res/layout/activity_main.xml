<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@mipmap/bg_profile"
                        android:foreground="#AA000000"
                        android:scaleType="centerCrop"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="30dp"
                        android:scaleType="centerCrop"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="1sp"
                        android:src="@mipmap/bg_6"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/round_corner_fill"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="@dimen/padding_4sp"
                        android:paddingRight="@dimen/padding_4sp"
                        android:paddingLeft="@dimen/padding_4sp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_online"
                            android:layout_gravity="center_vertical"
                            android:padding="@dimen/padding_4sp"
                            android:tint="@color/green_holo"/>
                        <TextView
                            android:id="@+id/txt_online"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_gravity="center_vertical"
                            android:paddingBottom="@dimen/padding_4sp"
                            android:paddingTop="@dimen/padding_4sp"
                            android:paddingEnd="@dimen/padding_8dp"
                            android:textSize="12sp"
                            android:text="Online"/>
                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="130dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/round_fill_white"
                    android:padding="@dimen/padding_8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_4sp"
                            android:text="Earnings"
                            android:tint="@color/gray"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_4sp"
                            android:tint="@color/gray"
                            android:layout_alignParentEnd="true"
                            android:text="Amount" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.67sp"
                        android:padding="@dimen/padding_4sp"
                        android:layout_marginTop="@dimen/padding_4sp"
                        android:background="@color/gray"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="100"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_weight="33"
                            android:layout_marginTop="30dp"
                            android:scaleType="centerCrop"
                            app:civ_border_color="@color/gray"
                            app:civ_border_width="1sp"
                            android:src="@drawable/ic_pick_up"/>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_weight="33"
                            android:layout_marginTop="30dp"
                            android:scaleType="centerCrop"
                            app:civ_border_color="@color/gray"
                            app:civ_border_width="1sp"
                            android:src="@drawable/ic_wallet"/>
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_weight="33"
                            android:layout_marginTop="30dp"
                            android:scaleType="centerCrop"
                            app:civ_border_color="@color/gray"
                            app:civ_border_width="1sp"
                            android:src="@drawable/ic_notification"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:weightSum="100">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pickups"
                            android:gravity="center_horizontal"
                            android:textColor="@color/gray"
                            android:layout_weight="33"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Wallet"
                            android:gravity="center_horizontal"
                            android:textColor="@color/gray"
                            android:layout_weight="33"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Notifications"
                            android:gravity="center_horizontal"
                            android:textColor="@color/gray"
                            android:layout_weight="33"/>
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:padding="@dimen/padding_8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:id="@+id/my_rides"
                    android:layout_weight="50"
                    android:layout_marginTop="30dp"
                    android:scaleType="centerCrop"
                    app:civ_border_color="@color/gray"
                    app:civ_border_width="1sp"
                    android:src="@drawable/ic_bike"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_weight="50"
                    android:layout_marginTop="30dp"
                    app:civ_border_color="@color/gray"
                    app:civ_border_width="1sp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_delivery"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:weightSum="100">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Rides"
                    android:gravity="center_horizontal"
                    android:textColor="@color/gray"
                    android:layout_weight="50"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Deliveries"
                    android:gravity="center_horizontal"
                    android:textColor="@color/gray"
                    android:layout_weight="50"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:itemIconTint="?attr/colorPrimary"
        app:itemTextColor="?attr/colorPrimary"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_navigation" />
</RelativeLayout>