    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="WideDialogAlert" parent="Base.Theme.AppCompat.Dialog">
        <item name="dialogCornerRadius">10dip</item>
        <item name="android:windowMinWidthMajor">70%</item>
        <item name="android:windowMinWidthMinor">70%</item>
    </style>
    <style name="WideDialog" parent="Base.Theme.AppCompat.Dialog">
        <item name="dialogCornerRadius">10dip</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>
    <style name="button_green" parent="AppTheme">
        <item name="android:buttonCornerRadius" tools:ignore="NewApi">5dp</item>

    </style>

    <style name="PopupAnimation" parent="Widget.AppCompat.PopupWindow">
        <item name="android:windowEnterAnimation">@anim/right_to_left_in</item>
        <item name="android:windowExitAnimation">@anim/left_to_right_out</item>
    </style>

    <style name="whiteCheck">
        <item name="colorAccent">#fff</item>
    </style>

    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="countrypicker_style" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

