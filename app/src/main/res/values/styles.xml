<resources xmlns:tools="http://schemas.android.com/tools">


    <!-- Day/Light theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_man</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_man</item>
        <item name="colorAccent">@color/colorAccent_man</item>
        <item name="textNameColor">#ffff</item>
        <item name="textTagColor">#838282</item>
        <item name="buttoncolor">#ffff</item>
        <item name="BackgroundColorApp">#FFF</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:titleTextColor" tools:ignore="NewApi">#fff</item>
        <item name="android:windowAnimationStyle">@style/windowanimationtransition</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="AppTheme.Transparent">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
